<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>List Test</title>
    <% include ../layout/bootstrapcss %>

</head>

<body>
    <% include ../layout/navbar %>

    <div class="container">

        <h1>Danh sach đề (Tests)</h1>
        <div class="d-flex justify-content-between">
            <form class=" form-inline my-2 my-lg-0 ml-auto">
                <input class="form-control mr-sm-2" type="search" aria-label="Search">
                <button class="btn btn-primary" type="submit"><b>Search</b></button>
            </form>
        </div>
        <div class="row mt-3">
            <% tests.forEach((test) => { %>

            <div class="col-sm-4 col-md-4 col-lg-3 mt-3 ">
                <div class="card h-100">
                    <img class="card-img-top" style="height: 20rem" src="<%= test.imageURL %>" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= test.testName %></h5>
                        <a href="/tests/<%= test._id %>" class="btn btn btn-success ml-auto mt-auto">Giải đề</a>
                    </div>
                </div>
            </div>
            <% }); %>

        </div>
        <nav aria-label="Page navigation example" class="d-flex justify-content-end mt-3">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="/tests?page=<%= page - 1 %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="/tests?page=<%= page - 1 %>"><%= page - 1 %></a></li>
                <li class="page-item"><a class="page-link" href="/tests?page=<%= page %>"><%= page %></a></li>
                <li class="page-item"><a class="page-link" href="/tests?page=<%= page + 1 %>"><%= page + 1 %></a></li>

                <li class="page-item">
                    <a class="page-link" href="/tests?page=<%= page + 1 %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <% include ../layout/bootstrapjs %>
</body>

</html>